{
	"prompts": [
		{
			"name": "projectName",
			"type": "text",
			"message": "Enter the Project Name:",
			"placeholder": "My Awesome Project",
			"required": true
		},
		{
			"name": "projectDescription",
			"type": "text",
			"message": "Enter a brief Project Description:",
			"placeholder": "A short description of what this project does.",
			"required": true
		},
		{
			"name": "githubUsername",
			"type": "text",
			"message": "Enter your GitHub Username:",
			"placeholder": "github_username",
			"required": true
		},
		{
			"name": "repoName",
			"type": "text",
			"message": "Enter the GitHub Repository Name:",
			"placeholder": "repo-name",
			"required": true
		},
		{
			"name": "authorName",
			"type": "text",
			"message": "Author Name (optional):",
			"placeholder": "Your Name",
			"required": false
		},
		{
			"name": "authorTwitter",
			"type": "text",
			"message": "Author Twitter Handle (optional, without @):",
			"placeholder": "your_twitter",
			"required": false
		},
		{
			"name": "authorEmail",
			"type": "text",
			"message": "Author Email (optional):",
			"placeholder": "your.email@example.com",
			"required": false
		},
		{
			"name": "includeLicense",
			"type": "confirm",
			"message": "Include a License section?",
			"initialValue": true
		},
		{
			"name": "license",
			"type": "select",
			"message": "Choose a license:",
			"initialValue": "MIT",
			"options": [
				{ "value": "MIT", "label": "MIT License" },
				{ "value": "Apache 2.0", "label": "Apache License 2.0" },
				{ "value": "GPLv3", "label": "GNU GPL v3" },
				{ "value": "BSD 3-Clause", "label": "BSD 3-Clause License" },
				"Unlicensed"
			],
			"dependsOn": "includeLicense",
			"showIf": true
		},
		{
			"name": "addTechBadges",
			"type": "confirm",
			"message": "Add 'Built With' technology badges?",
			"initialValue": true
		},

		{
			"name": "techNode",
